<?xml version="1.0" encoding="UTF-8"?>

<emperor-config>
    <modules>
        <load name="basic_columns"/>
        <load name="sort"/>
        <load name="filters"/>
        <load name="basic_actions"/>
        <load name="file_transfer"/>
    </modules>
    <user-interface>
        <file-pane>
            <style>
                <!--
                <cursor pane="active" bg="gtk:background-color:selected" fg="gtk:color:selected"/>
                <cursor pane="passive" bg="gtk:background-color:prelight"/>
                -->
                <selected fg="#ff0000"/>
            </style>
            <columns>
                <column title="Name">
                    <cell data="icon"/>
                    <cell data="filename" sort="filename-collation"/>
                </column>
            </columns>
        </file-pane>
        <command-bar>
            <command-button action="rename"/>
            <command-button action="view"/>
            <command-button action="edit"/>
            <command-button action="copy"/>
            <command-button action="move"/>
            <command-button action="mkdir"/>
            <command-button action="delete"/>
            <!--
            <command-button title="Menu" key="F9" command="pulldn"/>
            <command-button title="Quit" key="F10" command="quit"/>
            -->
        </command-bar>
    </user-interface>
</emperor-config>
