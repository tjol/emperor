<?xml version="1.0" encoding="UTF-8"?>

<emperor-apps>
    <binding action="edit">
        <match content-type="text/*"/>
        <match content-type="application/json"/>
        <match content-type="application/javascript"/>
        <match content-type="application/*+xml"/>
        <match content-type="application/xml"/>
        <default-application content-type="text/plain"/>
    </binding>
    <binding action="edit">
        <match content-type="image/*"/>
        <desktop-application name="gimp.desktop"/>
    </binding>
    <binding action="edit">
        <match content-type="image/svg+xml"/>
        <desktop-application name="inkscape.desktop"/>
    </binding>
    <binding action="edit">
        <match content-type="audio/*"/>
        <desktop-application name="audacity.desktop"/>
    </binding>
</emperor-apps>

