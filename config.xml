<?xml version="1.0" encoding="UTF-8"?>

<emperor-config>
    <modules>
        <load name="basic_columns"/>
        <load name="sort"/>
        <load name="commands"/>
    </modules>
    <user-interface>
        <file-pane>
            <style>
                <!--
                <cursor pane="active" bg="gtk:background-color:selected" fg="gtk:color:selected"/>
                <cursor pane="passive" bg="gtk:background-color:prelight"/>
                -->
                <selected fg="#ff0000"/>
            </style>
            <columns>
                <column title="Name">
                    <cell data="icon"/>
                    <cell data="filename" sort="filename-collation"/>
                </column>
            </columns>
        </file-pane>
        <command-bar>
            <command-button action="rename"/>
            <!--
            <command-button title="View" key="F3" command="view"/>
            <command-button title="Edit" key="F4" command="edit"/>
            <command-button title="Copy" key="F5" command="copy"/>
            <command-button title="Move" key="F6" command="move"/>
            <command-button title="New Directory" key="F7" command="mkdir"/>
            <command-button title="Delete" key="F8" command="delete"/>
            <command-button title="Menu" key="F9" command="pulldn"/>
            <command-button title="Quit" key="F10" command="quit"/>
            -->
        </command-bar>
    </user-interface>
</emperor-config>
